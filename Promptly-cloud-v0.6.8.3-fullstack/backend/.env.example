# ============================================
# Promptly Backend Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# --------------------------------------------
# Application Settings
# --------------------------------------------

# Node environment (development, production, test)
NODE_ENV=development

# Server port (default: 8080)
PORT=8080

# --------------------------------------------
# Database
# --------------------------------------------

# SQLite database path (for local development)
SQLITE_PATH=./data/app.db

# PostgreSQL database URL (for production on Render)
# Only needed if migrating from SQLite to Postgres
# DATABASE_URL=postgres://user:password@host:5432/promptly

# --------------------------------------------
# Authentication & Security
# --------------------------------------------

# JWT secret for token signing (REQUIRED in production)
# Generate a long random string: openssl rand -base64 32
JWT_SECRET=change-this-to-a-long-random-string-at-least-32-chars

# --------------------------------------------
# CORS Configuration
# --------------------------------------------

# Allowed frontend origins (comma-separated for multiple origins)
# Local dev: http://localhost:5173
# Production: https://your-app.vercel.app
# Use "*" to allow all origins (not recommended for production)
CORS_ORIGIN=http://localhost:5173

# --------------------------------------------
# OpenAI Configuration
# --------------------------------------------

# OpenAI API key (REQUIRED for LLM features)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-openai-api-key-here

# Default LLM model for question generation, spec creation, evaluation
OPENAI_MODEL=gpt-4.1-mini

# Alternative model name shown in settings (optional)
OPENAI_DEFAULT_MODEL=gpt-4.1-mini

# Model for outcome runner (optional, falls back to OPENAI_MODEL)
OUTCOME_MODEL=gpt-4o-mini

# Maximum candidates for outcome runner (optional, default: 8)
MAX_CANDIDATES=8

# --------------------------------------------
# Share Links
# --------------------------------------------

# Base URL for share links (include trailing slash)
# Local: http://localhost:8080/share/
# Production: https://your-backend.onrender.com/share/
LINK_BASE=http://localhost:8080/share/
